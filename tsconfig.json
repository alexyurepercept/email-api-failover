{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "lib": ["es2017"],
    "target": "es2017",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },

  "exclude": ["node_modules", "dist", "__tests__", "jest.ts"]
}
